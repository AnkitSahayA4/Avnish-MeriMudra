@model IEnumerable<MeriMudra.Models.UserCCApplyDetail>
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">My Dashboard</li>
    </ol>


    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> CC Userd Detail
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>City</th>
                            <th>Email</th>
                            <th>Phone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.CityName</td>
                                <td>@item.email</td>
                                <td>@item.MobileNumber</td>
                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
    <div class="row">

        <div class="col-lg-4">
            <!-- Example Pie Chart Card-->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-pie-chart"></i> Active/Inactive Users Per
                </div>
                <div class="card-body">
                    <canvas id="myPieChart" width="100%" height="100"></canvas>
                </div>
                <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
            </div>
            <!-- Example Notifications Card-->

        </div>
    </div>
</div>
<!-- /.container-fluid-->

<script>
    @{
        int activeCount = (from m in Model where m.isUserActive select m.isUserActive).Count();
        int inactiveCount= (from m in Model where !m.isUserActive select m.isUserActive).Count();
        int total = activeCount + inactiveCount;
        int a = (activeCount * 100) / (total);
        int b = (inactiveCount * 100) / (total);
    }
   // alert(@inactiveCount+"_"+@activeCount);
    //var array =
    // alert(array);
    //var _labels = JSON.parse(array);
    //alert(_labels);
    setTimeout(function () {
        var ctx = document.getElementById("myPieChart");
        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ["Active %", "Inactive %"],//["Blue", "Red", "Yellow", "Green"],
                datasets: [{
                    //data: [12.21, 15.58, 11.25, 8.32],
                    data: [@a, @b],
                    backgroundColor: ['#007bff', '#dc3545'],
                    //backgroundColor: ['#007bff', '#dc3545', '#ffc107', '#28a745'],
                }],
            },
        });
    }, 1000)
</script>